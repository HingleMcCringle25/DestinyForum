@model DestinyForum.Models.Discussion

@{
    ViewData["Title"] = "Discussion Details";
}
<div class="background-container">
    <div class="overlay"></div>
    <div class="content-wrapper">
        <a asp-action="Index" asp-controller="Home">Back to Discussions</a>
        <h1>@Model.Title</h1>

        <div>
            <hr />

            @if (!string.IsNullOrEmpty(Model.ImageFilename))
            {
                <img src="~/images/@Model.ImageFilename" alt="Discussion Image" style="max-width: 600px; max-height: 600px;" class="img-fluid mb-3" />
            }

            <p>@Model.Content</p>

            <div class="mb-3">
                <small class="card-footer">Created: @Model.CreateDate.ToString("dd/MM/yyyy")</small>
            </div>

            <a asp-action="Create" asp-controller="Comments" asp-route-discussionId="@Model.DiscussionId" class="btn btn-primary">Add Comment</a>
            <h3>Comments</h3>

            @if (Model.Comments != null && Model.Comments.Any())
            {
                <div class="row">
            
                    @foreach (var comment in Model.Comments)
                    {
                        <div class="col-md-12">
                    
                            <div class="card mb-3">
                        
                                <div class="card-body">
                                    <h4 class="comment-posted">Posted by: User</h4> @*hard coded user for this*@
                                    <p class="comment-text">@comment.Content</p>
                                    <h5 class="comment-date">Posted on: @comment.CreateDate.ToString("dd/MM/yyyy")</h5>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p>No comments yet.</p>
        
            }
        </div>
    </div>
</div>